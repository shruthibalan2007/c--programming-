#include <stdio.h>
int main()
{
int n;
scanf("%d", &n);
int arr[n];
for (int i = 0; i < n; i++) 
{
scanf("%d", &arr[i]);
}
int positiveCount = 0;
int negativeCount = 0;
for (int i = 0; i < n; i++) 
{
if (arr[i] > 0) 
{
positiveCount++;
} else if (arr[i] < 0) 
{
negativeCount++;
}
}
printf("Count of Positive Integer is %.2f\n", (float)positiveCount);
printf("Count of Negative Integer is %.2f\n", (float)negativeCount);
return 0;
}
